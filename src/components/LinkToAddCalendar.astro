---
interface Props {
  url?: string
  class?: string
}
const { url = '/laveladaes.ics', class: className } = Astro.props
---

<a
  class:list={[
    'bg-theme-raisin-black block px-2 text-lg text-white transition hover:scale-110',
    className,
  ]}
  rel="noreferrer noopener"
  id="add-to-calendar"
  target="_blank"
  href={url}
>
  <slot />
</a>
