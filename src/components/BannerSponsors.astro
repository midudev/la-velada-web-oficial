---
import { BANNERS } from '@/consts/bannerData'
import SectionTitle from './SectionTitle.astro'
---

<section id="banners" class="mx-auto my-16 max-w-xl lg:my-36">
  <SectionTitle title='Promociones' />
  <div class="flex flex-col items-center gap-8">
    {
      BANNERS.map(({ url, image, name, label }) => (
        <a
          href={url}
          target="_blank"
          rel="noopener noreferrer"
          aria-label={label ?? name}
          class="transition hover:scale-105"
        >
          <img
            src={image.logo}
            width={image.width}
            height={image.height}
            alt={label ?? name}
            class="rounded-lg shadow-md hover:brightness-150"
          />
        </a>
      ))
    }
  </div>
</section>
