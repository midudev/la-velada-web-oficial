---
import BoxerCard from "./BoxerCard.astro";

interface BoxerCardRowProps {
  row: {
    id: string;
    name: string;
  }[]
}

const { row } = Astro.props as BoxerCardRowProps
---

<div class="flex flex-wrap justify-start gap-4">
  {row.map(({ id, name }) => <BoxerCard id={id} name={name} anchorStyles="boxer-card inline-block transition hover:-translate-y-3 w-10 sm:w-14 lg:w-26 group relative rounded overflow-hidden" imgStyles="aspect-[900/1200] h-full w-full object-cover" nameContainerStyles="absolute inset-0 flex flex-col items-center justify-end bg-gradient-to-t from-pink-950/90 via-transparent to-transparent p-1 opacity-0 group-hover:opacity-100 transition-opacity duration-300" />)}
</div>
