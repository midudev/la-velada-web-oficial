---
import "@fontsource-variable/jost"

interface Props {
  title: string,
  description?: string,
  canonical?: string,
  image?: string,
  index?: boolean,
  follow?: boolean,
}

const { 
    title = "La Velada 4 (2024) - Web oficial del evento de boxeo de Ibai Llanos", 
    description = "Descubre La Velada 4, el emocionante evento de boxeo de 2024, organizado por Ibai Llanos donde tus creadores de contenido favoritos se enfrentar√°n en el ring.",
    canonical = Astro.url,
    image = "og.webp",
    index = true,
    follow = true } = Astro.props
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="canonical" href={canonical} />
		<title>{title}</title>
		<meta name="viewport" content="width=device-width" />
		<link rel="preload" as="image" href="/concrete.png" />
		<meta
		  name="keywords"
		  content="velada, streamers, creadores, Ibai, boxeo, midudev"
		/>
		<!--Twitter Card Metadata-->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:site" content="@infoLaVelada" />
		<meta name="twitter:creator" content="@IbaiLlanos" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={`${Astro.url}${image}`} />
		<!--Open Graph Metadata-->
		<meta name="og:image" content={`${Astro.url}${image}`} />
		<meta name="og:title" content={title} />
		<meta name="og:description" content={description} />
		<meta name="og:url" content={Astro.url} />
		<meta name="og:site_name" content="La Velada 4 Web Oficial" />
		<meta name="og:type" content="website" />
		<meta name="og:locale" content="es_ES" />
		<meta name="robots" content={`${index ? 'index': 'noindex'}, ${follow ? 'follow': 'nofollow'}, max-image-preview:large, max-snippet:-1, max-video-preview:-1`}>
		<meta name="googlebot" content={`${index ? 'index': 'noindex'}, ${follow ? 'follow': 'nofollow'}`} />
	  </head>
  <body>
    <div class="max-w-6xl px-2 lg:px-10 pt-20 md:pt-32 mx-auto">
      <slot />
    </div>
  </body>
</html>

<style is:global>
  :root {
    --color-primary: #333;
    --color-secondary: #ddd;

    --background-color: var(--color-secondary);
    --background-image: var(--background-color) url("/concrete.png") repeat;
  }

  .dark {
    --color-primary: #ddd;
    --color-secondary: #333;
    --background-image: var(--color-secondary);
  }

  html {
    font-family: "Jost Variable", system-ui, sans-serif;
    background: var(--background-image);
    scroll-behavior: smooth;
    perspective: 2000px;
    overflow-x: hidden;
  }

  body {
    overscroll-behavior: none;
  }

  /* Hiding class, making content visible only to screen readers but not visually */
  /* "sr" meaning "screen-reader" */
  .sr-only:not(:focus):not(:active) {
    clip: rect(0 0 0 0);
    clip-path: inset(50%);
    height: 1px;
    overflow: hidden;
    position: absolute;
    white-space: nowrap;
    width: 1px;
  }

  ::-webkit-scrollbar {
    width: 10px;
    border-radius: 10px;
  }

  ::-webkit-scrollbar-thumb {
    border-radius: 10px;
    background-color: theme("colors.primary");
    border: 2px solid transparent;
    background-clip: content-box;
  }

  ::-webkit-scrollbar-track {
    background: var(--background-image);
  }

  ::-webkit-scrollbar-corner {
    background: var(--background-image);
  }
</style>
