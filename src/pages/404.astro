---
import Sponsors from '@/components/Sponsors.astro'
import Layout from '@/layouts/Layout.astro'
---

<Layout title="404 - La Velada del Año V">
  <section
    class="mask-fade-bottom flex min-h-screen w-full items-center justify-center bg-[url('/images/hero.avif')] bg-cover bg-center text-center"
  >
    <div class="w-full max-w-3xl items-center justify-center">
      <div
        class="text-theme-raisin-black mb-8 rotate-113 text-[120px] font-bold tracking-tighter"
      >
        404
      </div>

      <h1 class="text-theme-raisin-black mb-2 text-4xl font-bold">¡FUERA DE COMBATE!</h1>
      <p class="text-theme-raisin-black mb-6 text-xl text-balance">
        Vaya, parece que te han noqueado...
      </p>

      <div class="flex min-h-4 items-center justify-center">
        <a
          href="/"
          class="bg-theme-turquoise text-theme-raisin-black flex items-center justify-center rounded-lg px-8 py-4 text-sm font-bold uppercase transition-all duration-300 ease-out hover:rotate-[2deg] active:scale-90"
          aria-label="Botón para volver al inicio"
        >
          <span class="relative z-10 flex items-center gap-2"> Volver al ring </span>
        </a>
      </div>
    </div>
  </section>
</Layout>