---
import Layout from '@/layouts/Layout.astro'

const title = 'La Velada del Año VI - Evento de boxeo de Ibai Llanos'
const description =
  'La Velada del Año VI. 9 de marzo, 19:00h CET en el Teatro Victoria de Barcelona. Evento de boxeo entre streamers organizado por Ibai Llanos.'
const canonical = 'https://www.infolavelada.com/'

export const prerender = true
---

<Layout title={title} description={description} canonical={canonical}>
  <section
    data-hero
    class="relative flex min-h-screen w-full flex-col items-center justify-between overflow-hidden bg-black"
    aria-label="Presentación de La Velada del Año VI"
  >
    <picture class="absolute inset-0 z-0">
      <source srcset="/background.avif" type="image/avif" />
      <source srcset="/background.webp" type="image/webp" />
      <img
        data-bg
        src="/background.png"
        alt=""
        role="presentation"
        class="h-full w-full object-cover object-center opacity-0 transition-opacity duration-1000 ease-in"
        fetchpriority="high"
        decoding="async"
      />
    </picture>

    <div class="absolute inset-0 z-1 bg-linear-to-b from-black/40 via-transparent to-black/80" aria-hidden="true"></div>

    <header class="relative z-10 flex flex-1 flex-col items-center justify-start px-4 pt-20 text-center sm:justify-center sm:pt-12">
      <h1 class="sr-only">La Velada del Año VI — Presentación del evento de boxeo de Ibai Llanos el 9 de marzo de 2026 en el Teatro Victoria de Barcelona</h1>

      <p class="animate-fade-in animate-delay-100 mb-0 font-cinzel text-xs font-semibold tracking-[0.35em] text-white/80 sm:text-sm md:text-base" aria-hidden="true">
        PRESENTACIÓN DE
      </p>

      <div class="animate-fade-in animate-delay-200 -mt-8" role="img" aria-label="Logo de La Velada del Año VI">
        <picture>
          <source srcset="/logo.avif" type="image/avif" />
          <source srcset="/logo.webp" type="image/webp" />
          <img
            src="/logo.png"
            alt="La Velada del Año VI"
            class="h-auto w-56 sm:w-72 md:w-80 lg:w-96"
            width="384"
            height="384"
            fetchpriority="high"
            decoding="async"
          />
        </picture>
      </div>

      <div class="animate-fade-in animate-delay-500 mt-6 flex flex-col items-center gap-2 sm:flex-row sm:gap-0">
        <time datetime="2026-03-09" class="font-cinzel text-xs font-bold tracking-[0.2em] text-white sm:text-sm md:text-base">
          9 DE MARZO
        </time>
        <span class="hidden px-4 text-white/40 sm:inline" aria-hidden="true">|</span>
        <time datetime="2026-03-09T19:00:00+01:00" class="font-cinzel text-xs font-bold tracking-[0.2em] text-white sm:text-sm md:text-base">
          19:00H CET
        </time>
        <span class="hidden px-4 text-white/40 sm:inline" aria-hidden="true">|</span>
        <span class="font-cinzel text-xs font-bold tracking-[0.2em] text-white sm:text-sm md:text-base">
          TEATRO VICTORIA, BARCELONA
        </span>
      </div>
    </header>

    <nav class="animate-fade-in animate-delay-700 relative z-10 mx-auto flex w-full max-w-3xl items-center justify-between px-6 pb-6 sm:px-10 sm:pb-8" aria-label="Redes sociales de Ibai Llanos">
      <a
        href="https://twitch.tv/ibai"
        target="_blank"
        rel="noopener noreferrer"
        class="group flex items-center gap-2 transition-opacity hover:opacity-80"
        aria-label="Seguir a Ibai en Twitch"
      >
        <svg class="size-5 text-[#a970ff] sm:size-6" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
          <path d="M11.571 4.714h1.715v5.143H11.57zm4.715 0H18v5.143h-1.714zM6 0L1.714 4.286v15.428h5.143V24l4.286-4.286h3.428L22.286 12V0zm14.571 11.143l-3.428 3.428h-3.429l-3 3v-3H6.857V1.714h13.714z"/>
        </svg>
        <span class="font-cinzel text-xs font-semibold tracking-wider text-white sm:text-sm">/IBAI</span>
      </a>

      <a
        href="https://tiktok.com/@ibaillanos"
        target="_blank"
        rel="noopener noreferrer"
        class="group flex items-center gap-2 transition-opacity hover:opacity-80"
        aria-label="Seguir a Ibai Llanos en TikTok"
      >
        <svg class="size-5 text-white sm:size-6" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
          <path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-2.88 2.5 2.89 2.89 0 0 1-2.89-2.89 2.89 2.89 0 0 1 2.89-2.89c.28 0 .54.04.79.1v-3.5a6.37 6.37 0 0 0-.79-.05A6.34 6.34 0 0 0 3.15 15.2a6.34 6.34 0 0 0 6.34 6.34 6.34 6.34 0 0 0 6.34-6.34V8.78a8.28 8.28 0 0 0 4.82 1.54V6.87a4.84 4.84 0 0 1-1.06-.18z"/>
        </svg>
        <span class="font-cinzel text-xs font-semibold tracking-wider text-white sm:text-sm">/IBAILLANOS</span>
      </a>

      <a
        href="https://youtube.com/@ibaboreal"
        target="_blank"
        rel="noopener noreferrer"
        class="group flex items-center gap-2 transition-opacity hover:opacity-80"
        aria-label="Seguir a Ibai Llanos en YouTube"
      >
        <svg class="size-5 text-[#ff0000] sm:size-6" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
          <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
        </svg>
        <span class="font-cinzel text-xs font-semibold tracking-wider text-white sm:text-sm">/IBAILLANOS</span>
      </a>
    </nav>
  </section>

  <style is:inline>
    [data-hero]:not([data-loaded]) .animate-fade-in {
      animation-play-state: paused !important;
      opacity: 0 !important;
    }
  </style>

  <script>
    document.addEventListener('astro:page-load', () => {
      const hero = document.querySelector('[data-hero]')
      const bg = hero?.querySelector('[data-bg]') as HTMLImageElement
      if (!hero || !bg) return

      let revealed = false

      function reveal(skipTransition = false) {
        if (revealed) return
        revealed = true

        if (skipTransition) {
          bg.classList.add('!transition-none')
          bg.classList.remove('opacity-0')
          hero!.setAttribute('data-loaded', '')
          return
        }

        bg.addEventListener(
          'transitionend',
          () => hero!.setAttribute('data-loaded', ''),
          { once: true },
        )
        bg.classList.remove('opacity-0')
      }

      if (bg.complete && bg.naturalHeight > 0) {
        reveal(true)
      } else {
        bg.addEventListener('load', () => reveal(false))
        bg.addEventListener('error', () => reveal(true))
        setTimeout(() => reveal(true), 3500)
      }
    })
  </script>
</Layout>
